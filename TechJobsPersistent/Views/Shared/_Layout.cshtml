<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechJobsPersistent</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3"style="background-color: #e3f2fd;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TechJobsPersistent</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="dropdown px-2">
                            <div class="nav-item dropdown" data-toggle="dropdown">
                                Jobs
                            </div>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-controller="List" asp-action="Index">List Jobs</a>
                                <a class="dropdown-item" asp-controller="List" asp-action="Jobs">Jobs</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="AddJob">Add Job</a>
                                <a class="dropdown-item" asp-controller="Search" asp-action="Index">Search Jobs</a>

                            </div>
                        </li>
                        <li class="dropdown">
                            <div class="nav-item dropdown px-2" data-toggle="dropdown">
                                Employers
                            </div>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-area="" asp-controller="Employer" asp-action="Index">Employers</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Employer" asp-action="Add">Add Employer</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Employer" asp-action="About">About Employer</a>
                            </div>
                        </li>
                        <li class="dropdown px-2">
                            <div class="nav-item dropdown" data-toggle="dropdown">
                                Skills
                            </div>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-controller="Skill" asp-action="Index">List of Skills</a>
                                <a class="dropdown-item" asp-controller="Skill" asp-action="Add">Add Skill</a>
                            </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - TechJobsPersistent
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
