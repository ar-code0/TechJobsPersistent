@model TechJobsPersistent.ViewModels.AddJobViewModel

    <style>
        .field-validation-error {
            color: red;
        }

        .input-validation-error {
            border: 1px solid red;
        }
    </style>

<br />
<div class="card">
    <h1 class="display-4 text-center card-header">Add a Job</h1>
</div>
<br />

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <input class="form-control" asp-for="Name" placeholder="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label>Employers</label>
        <select class="custom-select my-1 mr-sm-2" asp-for="Id" asp-items="@Model.Employers"></select>
        <span asp-validation-for="Id"></span>
    </div>
    <div>
        &nbsp;&nbsp;&nbsp;&nbsp;Or&nbsp;&nbsp;&nbsp;&nbsp;<a asp-controller="Employer" asp-action="Add" value="Add employer">Add employer</a>
    </div>
    <br />
    <div class="form-check">
        <div class="container">
            <div class="row">
                <div class="col-sm-auto">
                    Skills:
                </div>
                <div class="col">
                    <ul style=" column-count: 2; column-gap: 2rem; list-style: none;">
                        @foreach (var skill in Model.Skills)
                        {
                        <li>
                            <input name="selectedSkills" class="form-check-input px-2" type="checkbox" id="@skill.Value" value="@skill.Value" />

                            <label class="container" for="@skill.Value">
                                @skill.Text
                            </label>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div>
        &nbsp;&nbsp;&nbsp;&nbsp;Or&nbsp;&nbsp;&nbsp;&nbsp;<a asp-controller="Skill" asp-action="Add" value="add_skill">Add Skill</a>
    </div>
    <br />
    <input type="submit" value="Add Job" class="btn btn-primary" />
</form>







