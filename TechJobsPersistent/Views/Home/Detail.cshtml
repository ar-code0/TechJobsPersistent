@model TechJobsPersistent.ViewModels.JobDetailViewModel

    <div class="card border border-warning m-2 " style="width: 30rem;">
        <h4 class="card-header bg-secondary text-light">@Model.Name</h4>
        <ul class="list-group list-group-flush">
            <li class="list-group-item bg-light"><span class="text-info">Employer:</span> @Model.EmployerName</</li>
            <li class="list-group-item"><span class="text-info">Location:</span> @Model.EmployerLocation</li>
            <li class="list-group-item"><span class="text-info">Skills:</span> @Model.SkillText</li>
        </ul>
        <div class="card-body">
            <button asp-controller="Skill" asp-action="AddJob" asp-route-id="@Model.JobId" class="btn btn-primary">Add additional skills</button>
        </div>
    </div>






