@model List<TechJobsPersistent.Models.Skill>

<br />
<div class="card">
    <h1 class="display-4 text-center card-header">In-demand Skills</h1>
</div>
<br />
<a class=" btn btn-primary" asp-controller="Skill" asp-action="Add">Add a Skill</a>
<br />
<br />

@if (Model.Count == 0)
{
    <p class="text-danger">No skills are currently listed!</p>
}
else
{
<div>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Skills</th>
                <th width="20%"></th>
            </tr>
        </thead>
        @foreach (Skill skill in Model)
        {
            <tr>
                <td>
                    <a class="list-group-item list-group-item-action px-4" asp-controller="Skill" asp-action="About" asp-route-id="@skill.Id">@skill.Name</a>
                </td>
                <td>
                    <span><a asp-controller="Remove" asp-action="Skill" asp-route-id="@skill.Id" class="btn btn-danger btn-sm">Remove</a></span>
                </td>
            </tr>
        }
    </table>
</div>
}
