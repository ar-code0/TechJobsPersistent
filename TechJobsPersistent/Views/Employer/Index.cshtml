@model List<TechJobsPersistent.Models.Employer>



<br />
<div class="card">
    <h1 class="display-4 text-center card-header">Employers Currently Hiring</h1>
</div>
<br />

@if (Model.Count == 0)
{
    <p>No employers are currently hiring!</p>
}
else
{
    <div>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Employer</th>
                    <th width="20%"></th>
                </tr>
            </thead>
                @foreach (Employer employer in Model)
                {
                    <tr>
                        <td>
                            <a method="post" asp-controller="Employer" asp-action="About" asp-route-id="@employer.Id">@employer.Name</a>
                        </td>
                        <td>
                            <a asp-controller="Remove" asp-action="Employer" asp-route-id="@employer.Id" class="btn btn-danger btn-sm">Remove</a>
                        </td>
                    </tr>
                }
        </table>
    </div>
}