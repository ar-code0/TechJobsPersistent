
<br />
<div class="card">
    <div class="card-header display-4 text-center">View Jobs By Category</div>
</div>
<br />
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            @foreach (var column in ViewBag.columns)
            {
                @if (column.Key != "all")
                {
                    <th>@column.Value</th>
                }
            }
        </tr>
    </thead>
    <tr>
        @foreach (var category in ViewBag.tableChoices)
        {
            <td>
                <ul>
                    @if (category == "employer")
                    {
                        @foreach (var item in ViewBag.employers)
                        {
                    <li>
                        <a asp-controller="List" asp-action="Jobs" asp-route-column="@category" asp-route-value="@item.Name">@item.Name</a>
                    </li>
                        }
                    }
                    else
                    {
                        @foreach (var item in ViewBag.skills)
                        {
                    <li>
                        <a asp-controller="List" asp-action="Jobs" asp-route-column="@category" asp-route-value="@item.Name">@item.Name</a>
                    </li>
                        }
                    }
                </ul>
            </td>
        }
    </tr>
</table>
